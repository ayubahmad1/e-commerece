<h1 class="text-center shadow mb-3">Success! Your Order has been Placed!</h1>

<div class="card">
  <div class="card-body">
    <div class="container mb-5 mt-3">
      <div class="row d-flex align-items-baseline">
        <div class="col-xl-9">
          <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>ID: #123-123</strong></p>
        </div>
        <div class="col-xl-3 float-end">
          <a class="btn btn-light text-capitalize border-0" data-mdb-ripple-color="dark"><i
              class="fas fa-print text-primary"></i> Print</a>
          <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark"><i
              class="far fa-file-pdf text-danger"></i> Export</a>
        </div>
        <hr>
      </div>

      <div class="container">
        <div class="col-md-12">
          <div class="text-center">
            <i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>
            <p class="pt-0">Your Personal Store</p>
          </div>

        </div>

        <div class="row">
          <div class="col-xl-8">
            <ul class="list-unstyled">
              <li class="text-muted">To: <span style="color:#5d9fc5 ;"><%= current_user.name %></span></li>
              <li class="text-muted">DHA, Lahore</li>
              <li class="text-muted">Punjab, Pakistan</li>
              <li class="text-muted"><i class="fas fa-phone"></i><%= current_user.contact_number %></li>
            </ul>
          </div>
          <div class="col-xl-4">
            <p class="text-muted">Invoice</p>
            <ul class="list-unstyled">
              <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                  class="fw-bold">Creation Date: </span><%= Date.today.to_s %></li>
              <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                  class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                  Paid</span></li>
            </ul>
          </div>
        </div>

        <div class="row my-2 mx-1 justify-content-center">
          <table class="table table-striped table-borderless">
            <thead style="background-color:#84B0CA ;" class="text-white">
              <tr>
                <th scope="col" data-formatter="runningFormatter">#</th>
                <th scope="col">Product</th>
                <th scope="col">Unit Price</th>
              </tr>
            </thead>
            <tbody>
              <%= render  partial: "item", collection: @cart %>
            </tbody>
          </table>
        </div>
        <div class="row">
          <div class="col-xl-8">
            <p class="ms-3">Thank you for visiting us!</p>

          </div>
          <div class="col-xl-3">
            <ul class="list-unstyled">
              <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Tax(0%)</span>$0</li>
            </ul>
            <p class="text-black float-start"><span class="text-black me-3">Amount Paid</span><span
                style="font-size: 25px;">$ <%= @session_with_expand.amount_total/100.to_f %></span></p>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-xl-2">
            <%= link_to 'Home Page', root_path, class: 'btn btn-sm btn-outline-dark' %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
