<h2>Add a Comment</h2>

  <%= form_with model: [ @product, @product.comments.build ] do |form| %>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>


<% if false %>

<%= form_with model: comment, url: url do |form| %>
  <div class="form-group px-5">
    <%= form.text_area :body,  class:"form-control"%>
  </div>
  <div class="form-group px-5">
    <%= form.submit %>
  </div>
<% end %>
<% end %>

