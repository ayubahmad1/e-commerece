<div class="new-password">
  <div class="card border-0">
    <div class="card-block">
      <h2 class= "text-center shadow p-1 m-2 mb-5">Send Reset Password Email</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group my-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control w-25 border-0 border-bottom shadow-sm'  %>
        </div>

        <div class="form-group my-2">
          <%= f.submit "Reset Password", class: 'btn btn-sm btn-outline-dark' %>
        </div>
      <% end %>

      <div class="auth-links">
        <%= render "users/shared/links" %>
      </div>
   </div>
  </div>
</div>
